{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": false,
    "moduleResolution": "Node",
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    "outDir": "./temp"
  },
  "include": ["**/*/", ".husky/scripts/"],
  "exclude": ["dist/**/*.dev.js", "dist/**/*.raw.js"]
}
